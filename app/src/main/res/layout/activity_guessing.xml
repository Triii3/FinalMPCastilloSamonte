<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guessing"
    android:background="@drawable/mobile_bg">
<ImageView
    android:id="@+id/imgHomePress"
    android:src="@drawable/img_press_to_home"
    android:layout_width="38dp"
    android:layout_height="44dp"
    android:layout_marginVertical="18dp"/>
    <ImageView
        android:id="@+id/imgMoneyTotal"
        android:layout_marginLeft="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/money"
        android:layout_below="@id/imgHomePress"/>
    <TextView
        android:id="@+id/txtTotalCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgMoneyTotal"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:text="1000"
        android:textSize="30dp"
        android:textColor="#8fbc8f"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:id="@+id/txtGuessRule"
        android:layout_below="@+id/imgMoneyTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place your bet and Guess a number between 0-9!"
        android:textSize="15dp"
        android:textColor="#0c2143"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/myfont1"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/numberimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGuessRule"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgGuess"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/mystery"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:id="@+id/imgRandom"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mystery"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/numberimage">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/myfont1"
            android:textColor="#0c2143"
            android:text="GUESS NUMBER">

        </TextView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/myfont1"
            android:textColor="#0c2143"
            android:text="RANDOM NUMBER">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/betGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textNumber">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/betID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/myfont1"
                android:textSize="30dp"
                android:textColor="#156286"
                android:text="BET">
            </TextView>

            <EditText
                android:id="@+id/betNumber"
                android:background="@drawable/bordertext"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawablePadding="25dp"
                android:inputType="number"
                android:fontFamily="@font/myfont1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/betID"
                android:layout_marginRight="5dp"
                android:layout_marginTop="50dp">
            </EditText>

            <TextView
                android:layout_below="@id/betID"
                android:id="@+id/guessID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/myfont1"
                android:textSize="30dp"
                android:textColor="#156286"
                android:text="GUESS">
            </TextView>

            <EditText
                android:id="@+id/guessNumber"
                android:background="@drawable/bordertext"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawablePadding="25dp"
                android:inputType="number"
                android:fontFamily="@font/myfont1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/betID"
                android:layout_toRightOf="@id/guessID"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp">
            </EditText>

            <TextView
                android:id="@+id/txtCredentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/guessID"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/myfont1"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:textColor="#ff0000"
                >
            </TextView>
            <Button
                android:id="@+id/btnPlaceBet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="PLACE BET!"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:backgroundTint="#156286"
                android:fontFamily="@font/myfont1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtCredentials">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>