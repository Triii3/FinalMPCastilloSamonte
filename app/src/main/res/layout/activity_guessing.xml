<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guessing"
    android:background="#C4E7F5">
<ImageView
    android:id="@+id/homePress"
    android:src="@drawable/img_press_to_home"
    android:layout_width="38dp"
    android:layout_height="44dp"
    android:layout_marginVertical="18dp"/>
<ImageView
    android:id="@+id/imgMoneyTotal"
    android:layout_marginLeft="10dp"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:src="@drawable/money"
    android:layout_below="@id/homePress"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/imgMoneyTotal"
    android:layout_marginTop="90dp"
    android:layout_marginLeft="10dp"
    android:text="1000"
    android:textSize="30dp"
    android:fontFamily="sans-serif-medium"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</RelativeLayout>