<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guessing"
    android:background="#C4E7F5">
<ImageView
    android:id="@+id/homePress"
    android:src="@drawable/img_press_to_home"
    android:layout_width="38dp"
    android:layout_height="44dp"
    android:layout_marginVertical="18dp"/>
    <ImageView
        android:id="@+id/imgMoneyTotal"
        android:layout_marginLeft="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/money"
        android:layout_below="@id/homePress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgMoneyTotal"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:text="1000"
        android:textSize="30dp"
        android:textColor="#156286"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:id="@+id/txtGuessRule"
        android:layout_below="@+id/imgMoneyTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place your bet and Guess a number between 0-9!"
        android:textSize="15dp"
        android:textColor="#156286"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/numberimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGuessRule"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/number1"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/number1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/numberimage">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="#156286"
            android:text="GUESS NUMBER">

        </TextView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="#156286"
            android:text="RANDOM NUMBER">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/betGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textNumber">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/betID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="30dp"
                android:textColor="#156286"
                android:text="BET:">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/betID"
                android:layout_marginTop="50dp">
            </EditText>

            <TextView
                android:layout_below="@id/betID"
                android:id="@+id/guessID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="30dp"
                android:textColor="#156286"
                android:text="GUESS:">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/betID"
                android:layout_toRightOf="@id/guessID"
                android:layout_marginTop="50dp">
            </EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="PLACE BET!"
                android:textSize="30dp"
                android:backgroundTint="@color/white"
                android:textColor="#156286"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/guessID">

            </Button>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>